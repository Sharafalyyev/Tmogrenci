<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Tmogrenci" parent="android:Theme.Material.Light.NoActionBar" />
    <!-- Base application theme. -->
    <style name="Base.Theme.Tmogrenci" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- New color palette -->
        <item name="colorPrimary">@color/primary_green</item>
        <item name="colorPrimaryVariant">@color/primary_green</item>
        <item name="colorOnPrimary">@color/background_white</item>
        <item name="android:colorBackground">@color/background_white</item>
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorOnSurface">@color/background_white</item>
        <item name="android:statusBarColor">@color/background_black</item>
        <item name="android:navigationBarColor">@color/background_black</item>
        <item name="fontFamily">@font/urbanist_regular</item>
    </style>

    <style name="Theme.Tmogrenci.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Tmogrenci.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Tmogrenci.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>